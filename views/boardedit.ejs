
<html>

  <head>
    <meta charset="utf-8" />
    <title>게시물 수정</title>
  </head>
  <!-- http://bbs.ruliweb.com/news/board/1005 -->
  <body>
    <form method="post" action="/boardsave" >
      <input type="hidden" name="boardseq" value="<%= boardinfo[0].BoardSeq %>" />

    <table style="border:solid 1px;">
      <tr>
        <td style="border:solid 1px;" >구분</td>
        <td style="border:solid 1px;" >
          <select name="boardkind">
            <option value="3001" <% if(boardinfo[0].BoardKind == 3001) { %>selected<% } %> >정치</option>
            <option value="3002" <% if(boardinfo[0].BoardKind == 3002) { %>selected<% } %> >경제</option>
            <option value="3003" <% if(boardinfo[0].BoardKind == 3003) { %>selected<% } %> >IT</option>
          </select>

        </td>
      </tr>
      <tr>
        <td style="border:solid 1px;" >사원</td>
        <td style="border:solid 1px;" >
          <select name="regempseq">
            <% for(var i=0;i<empinfo.length;i++) { %>
            <option value="<%= empinfo[i].EmpSeq %>" <% if(boardinfo[0].RegEmpSeq == empinfo[i].EmpSeq) { %>selected<% } %> ><%= empinfo[i].EmpName %></option>
            <% } %>
          </select>
        </td>
      </tr>
      <tr>
        <td style="border:solid 1px;" >제목</td>
        <td style="border:solid 1px;" >
          <input type="text" name="title" value="<%= boardinfo[0].Title %>" />
        </td>
      </tr>
      <tr>
        <td style="border:solid 1px;" >내용</td>
        <td style="border:solid 1px;" >
          <textarea name="content" rows="10" cols="30"><%= boardinfo[0].Content %></textarea>
        </td>
      </tr>
    </table>
    <input type="submit" value="저장" />
    </form>
    <a href="/boardlist" >목록</a>
    <a href="/boardinfo/<%=boardinfo[0].BoardSeq%>" >돌아가기</a>
  </body>


</html>
